@model IEnumerable<Project1.ViewModels.OrderViewModel>

@{
    ViewData["Title"] = "Details";
}

<h1>@ViewData["LocationName"] Location Order History</h1>

<div>
    @{
        int j = 1;
    }
    @foreach (var item in Model)
    {
        <h4>Order @j</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(modelItem => item.LocationName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => item.LocationName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(modelItem => item.CustomerName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => item.CustomerName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(modelItem => item.OrderTime)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => item.OrderTime)
            </dd>
        </dl>

        <div>
            <div>
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                Cupcake Type
                            </th>
                            <th>
                                Cupcake Quantity
                            </th>
                            <th>
                                Cupcake Cost
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            decimal sum = 0;
                        }
                        @for (int i = 0; i < item.OrderItems.Count; i++)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Cupcakes.Single(c => c.Id == item.Cupcakes[i].Id).Type)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.OrderItems[i].Quantity)
                                </td>
                                <td>
                                    $@Html.DisplayFor(modelItem => item.Cupcakes.Single(c => c.Id == item.Cupcakes[i].Id).Cost)
                                </td>
                                @{
                                    sum += (item.OrderItems[i].Quantity ?? 0) * item.Cupcakes.Single(c => c.Id == item.Cupcakes[i].Id).Cost;
                                }
                            </tr>
                                    }
                    </tbody>
                </table>
            </div>
            <dl class="row">
                <dt class="col-sm-2">
                    Order Total
                </dt>
                <dd class="col-sm-10">
                    $@sum
                </dd>
            </dl>
        </div>
        <div>
            @Html.ActionLink("Order Details", "Order", new { id = item.OrderId }) |
        </div>
        <hr />

                                        j++;
                                    }
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>



