@model Project1.ViewModels.OrderViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LocationName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LocationName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CustomerName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderTime)
        </dd>
    </dl>
    <div>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Cupcake Type
                    </th>
                    <th>
                        Cupcake Quantity
                    </th>
                    <th>
                        Cupcake Cost
                    </th>
                </tr>
            </thead>
            <tbody>
                @{
                    decimal sum = 0;
                }
                @for (int i = 0; i < Model.OrderItems.Count; i++)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => Model.Cupcakes.Single(c => c.Id == Model.Cupcakes[i].Id).Type)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.OrderItems[i].Quantity)
                        </td>
                        <td>
                            $@Html.DisplayFor(modelItem => Model.Cupcakes.Single(c => c.Id == Model.Cupcakes[i].Id).Cost)
                        </td>
                        @{
                            sum += (Model.OrderItems[i].Quantity ?? 0) * Model.Cupcakes.Single(c => c.Id == Model.Cupcakes[i].Id).Cost;
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <dl class="row">
        <dt class="col-sm-2">
            Order Total
        </dt>
        <dd class="col-sm-10">
            $@sum
        </dd>

    </dl>
</div>
